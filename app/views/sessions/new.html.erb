<div class="page-header">
  <h1>Log in</h1>
</div>
<% if flash[:error] %>
 <ul>
   <li><%= flash[:error] %></li>
 </ul>
<% end %>

<%= form_tag sessions_path do %>
<P><%= label_tag "Username" %>
<%= text_field_tag :user_name %></p>
<p><%= label_tag :password %>
<%= password_field_tag :password %></p>
<%= submit_tag "Submit" %>
<% end %>
